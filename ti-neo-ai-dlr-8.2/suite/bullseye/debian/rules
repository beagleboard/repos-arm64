#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

override_dh_auto_configure:
	mkdir -p ./tmp/opt/ ; git clone --single-branch --branch TI.8.2.0 --depth 1 https://github.com/TexasInstruments/neo-ai-dlr ./tmp/opt/neo-ai-dlr/
	cd ./tmp/opt/neo-ai-dlr/ ; git submodule update --init --recursive ; mkdir build
	cd ./tmp/opt/neo-ai-dlr/build/ ; cmake -DUSE_TIDL=ON -DUSE_TIDL_RT_PATH=/opt/ti-processor-sdk-rtos-j721e-evm-08_02_00_06/tidl_j721e_08_02_00_11/ti_dl/rt .. ; make -j4 ; make install DESTDIR=../../../
	cd ./tmp/opt/neo-ai-dlr/python ; python3 setup.py install --prefix=../usr

%:
	dh $@
