#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

TAG=bbb.io-08.01.00.006

override_dh_strip:
	# Just disable for now...

override_dh_auto_configure:
	git clone -b $(TAG) https://github.com/beagleboard/arm-trusted-firmware --depth=1
	cd ./arm-trusted-firmware/ ; make -j4 CROSS_COMPILE=aarch64-linux-gnu- CFLAGS= LDFLAGS= ARCH=aarch64 PLAT=k3 TARGET_BOARD=generic SPD=opteed all

%:
	dh $@

