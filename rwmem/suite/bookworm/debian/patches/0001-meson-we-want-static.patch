 meson_options.txt | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/meson_options.txt b/meson_options.txt
index bd050bf..c217bde 100644
--- a/meson_options.txt
+++ b/meson_options.txt
@@ -1,5 +1,5 @@
 option('pyrwmem', type : 'feature', value : 'auto',
        description : 'Build python bindings')
 
-option('static-libc', type : 'boolean', value : false,
+option('static-libc', type : 'boolean', value : true,
        description : 'Build with -static-libgcc -static-libstdc++')
