#!/bin/sh
#
# see: dh_installdeb(1)

set -e

package="bb-code-server"

systemctl daemon-reload | true

main_install () {
	mkdir -p /opt/bb-code-server/config/
	mkdir -p /opt/bb-code-server/extensions/

	echo "${package}: --list-extensions"
	/opt/bb-code-server/app/bin/code-server --auth none --disable-telemetry --disable-update-check --config /opt/bb-code-server/config/config.yaml --extensions-dir /opt/bb-code-server/extensions/ --list-extensions
	echo "${package}: *****************"

	#Git
	echo "${package}: Installing: donjayamanne.githistory"
	/opt/bb-code-server/app/bin/code-server --auth none --disable-telemetry --disable-update-check --config /opt/bb-code-server/config/config.yaml --extensions-dir /opt/bb-code-server/extensions/ --install-extension donjayamanne.githistory --force
	echo "${package}: *****************"

	#Code Runner
	echo "${package}: Installing: formulahendry.code-runner"
	/opt/bb-code-server/app/bin/code-server --auth none --disable-telemetry --disable-update-check --config /opt/bb-code-server/config/config.yaml --extensions-dir /opt/bb-code-server/extensions/ --install-extension formulahendry.code-runner --force
	echo "${package}: *****************"

	echo "${package}: --list-extensions"
	/opt/bb-code-server/app/bin/code-server --auth none --disable-telemetry --disable-update-check --config /opt/bb-code-server/config/config.yaml --extensions-dir /opt/bb-code-server/extensions/ --list-extensions
	echo "${package}: *****************"

	chown -R 1000:1000 /opt/bb-code-server/config/ || true
	chown -R 1000:1000 /opt/bb-code-server/extensions/ || true

	echo "${package}:Installed"
}

case "$1" in
    configure)
        main_install
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
